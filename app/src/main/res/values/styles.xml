<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="colorAccent">@color/gray</item>
<!--
        <item name="android:background">@color/white</item>
-->
    </style>

    <style name="PickerBtns">

        <item name="android:padding">12dp</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="CreatorBtns">
        <item name="android:gravity">center</item>
    </style>

    <style name="TopBtns" parent="CreatorBtns">

        <item name="android:background">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>

    </style>

</resources>
